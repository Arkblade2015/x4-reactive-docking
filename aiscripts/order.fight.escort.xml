	<replace sel="//aiscript/init/set_value[@name='$iscarrierbased']">
		<do_if value="this.assignedcontrolled.knownname == 'Elite Vanguard'">
			<set_value name="$debugchance" exact="100" />
			<debug_text text="'Typeof: %s'.[typeof @$target.pilot.$DockingReactive]" />
			<do_if value="@$target.pilot.$DockingReactive">
				<do_all exact="$target.subordinates.count" counter="$i">
					<debug_text text="'%s: %s'.[$i, @$target.pilot.$DockingReactive.{$i}]" />
				</do_all>
			</do_if>
		</do_if>
		<set_value name="$groupindex" exact="this.assignedcontrolled.subordinategroupid" />
		<debug_text text="'Ship %s group index is: %s'.[@this.assignedcontrolled.knownname, @$groupindex]" chance="$debugchance" />
		<set_value name="$reactivedocking" exact="@$target.pilot.$DockingReactive.{$groupindex} == 1" />
		<debug_text text="'Ship %s reactive docking is: %s'.[@this.assignedcontrolled.knownname, @$reactivedocking]" chance="$debugchance" />
		<set_value name="$iscarrierbased" exact="(($reactivedocking and @$target.iscapitalship) or @$target.type == shiptype.carrier or this.assignedcontrolled.subordinategroupdockoverride) and not this.assignedcontrolled.iscapitalship"/>
		<debug_text text="'Ship %s is carrier based: %s'.[@this.assignedcontrolled.knownname, @$iscarrierbased]" chance="$debugchance" />
	</replace>
</diff>